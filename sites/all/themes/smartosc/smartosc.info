name = Smartosc
description = "This is a theme of the Smart OSC site"
core = 7.x

;Stylesheets
stylesheets[all][] = front-end/css/plugin/bootstrap.min.css
stylesheets[all][] = front-end/css/plugin/owl.carousel.min.css
stylesheets[all][] = front-end/css/style.css

;Scripts
;scripts[] = front-end/js/plugin/bootstrap.min.js

scripts[] = front-end/js/plugin/owl.carousel.min.js
scripts[] = front-end/js/plugin/jquery.hoverdir.js
scripts[] = front-end/js/plugin/jquery.fullPage.min.js
scripts[] = front-end/js/plugin/jquery.slimscroll.min.js
scripts[] = front-end/js/plugin/jquery.youtubebackground.js

scripts[] = front-end/js/select-menu.js
scripts[] = front-end/js/script.js


;Regions
regions[page_top]       = Page Top
regions[page_bottom]    = Page Bottom

regions[fixed_header]   = Fixed header
regions[header]         = Header
regions[branding]       = Branding

regions[highlighted]    = Highlighted
regions[content_top]    = Content Top
regions[content]        = Content
